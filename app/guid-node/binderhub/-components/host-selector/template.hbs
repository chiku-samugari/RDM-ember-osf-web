<div ...attributes>
    {{#if this.loading}}
        {{t 'binderhub.loading'}}
    {{else}}
        <div local-class='host_selector'>
            <span local-class='host_label'>
                {{t 'binderhub.servers.host'}}
            </span>
            <BsDropdown data-test-jupyterhub-selection as |dd|>
                <dd.button>
                    {{@selectedHostURL.href}}
                    <span class='caret'></span>
                </dd.button>
                <dd.menu
                    local-class='dropdown_menu'
                    as |menu|>
                    {{#each @availableHosts as |item|}}
                        <menu.item data-test-jupyterhub-selection-option role='menuitem'>
                            <OsfButton
                                @type='link'
                                @onClick={{action @onHostSelect item.url}}
                            >
                                {{#if (eq @selectedHostURL.href item.url)}}
                                    {{#fa-stack as |s|}}
                                        {{s.stack-1x 'fw'}}
                                        {{s.stack-1x 'check'}}
                                    {{/fa-stack}}
                                {{else}}
                                    {{#fa-stack as |s|}}
                                        {{s.stack-1x 'fw'}}
                                    {{/fa-stack}}
                                {{/if}}
                                <span>{{item.name}}</span>
                            </OsfButton>
                        </menu.item>
                    {{/each}}
                </dd.menu>
            </BsDropdown>
        </div>
    {{/if}}
</div>
